{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Firstname</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ contact.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ contact.tag }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('contact_list') }}">Back to list</a>

    <a href="{{ path('contact_edit', {'id': contact.id}) }}">Edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
